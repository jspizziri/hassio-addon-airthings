{
    "name": "Airthings",
    "version": "0.0.1",
    "slug": "airthings",
    "description": "Get values Airthings environment monitoring devices.",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "application",
    "boot": "auto",
    "host_network": "true",
    "services": ["mqtt:need"],
    "options": {
        "devices": [
          { "mac": null, "name": null }
        ],
        "refresh_interval": 150,
        "retry_count": 10,
        "retry_wait": 3,
        "log_level": "INFO",
        "mqtt_discovery": "true"
      },
      "schema": {
        "devices": [
          { "mac": "str", "name": "str" }
        ],
        "refresh_interval": "int",
        "retry_count": "int",
        "retry_wait": "int",
        "log_level": "str",
        "mqtt_discovery": "bool"
      },
      "image": "mjmccans/hassio-addon-airthings-{arch}"
  }